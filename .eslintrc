{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
  },
  "ecmaFeatures": { "modules": true },
  "rules": {
    "new-cap": 0,
    "no-use-before-define": [2, "nofunc"],
    "no-unused-vars": 1,
    "strict": 0,
    "semi": 0,
    "comma-dangle": [1, "always-multiline"],
    "quotes": 0,
    "no-underscore-dangle": 0,
    "eol-last": 0,
    "space-infix-ops": 0,
    "no-trailing-spaces": 0,
    "comma-spacing": 1,
    "no-mixed-spaces-and-tabs": 1,
    "key-spacing": 1,
    "no-shadow": 1,
    "dot-notation": 0
  }
}
